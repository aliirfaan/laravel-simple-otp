{
    "name": "aliirfaan/laravel-simple-otp",
    "description": "Generate and verify OTP in Laravel for any model type and intent",
    "license": "MIT",
    "keywords": ["Laravel", "OTP", "One time password", "Model", "Intent"],
    "authors": [
        {
            "name": "aliirfaan",
            "email": "aliirfaan.freelance@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "aliirfaan\\LaravelSimpleOtp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "aliirfaan\\LaravelSimpleOtp\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "aliirfaan\\LaravelSimpleOtp\\SimpleOtpServiceProvider"
            ]
        }
    },
    "require": {
        "php": ">=8.0.0"
    },
    "require-dev": {
        "orchestra/testbench": "^9.0",
        "phpunit/phpunit": "^11.0"
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    }
}
